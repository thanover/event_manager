<div class="container">
    <br><br>
    <h5>Add A User:</h5>
    <form action='/add_user' method='post' id='add_user_form' class="col s12">
        <div class="row">
            <div class="input-field col s8">
                <input name="firstName" id="firstName" type="text" class="validate">
                <label for="firstName">First Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s8">
                <input name="lastName" id="lastName" type="text" class="validate">
                <label for="lastName">Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s8">
                <input name="email" id="email" type="email" class="validate">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s8">
                <select name="type">
                <option value="" disabled selected>Select a User Type:</option>
                        <option value="admin">Admin</option>
                        <option value="user">General User</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col s10">
                <button type="submit" class="waves-effect waves-light btn green darken-1"><i class="material-icons left">add_circle</i>Add User</button>
            </div>               
        </div>
    </form>
    <br>
    <br>
    <div class='divider'></div>
</div>

<div class="container">
    <br>
    <br>
    <h5>All Users:</h5>
    <table class="highlight centered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>User Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.type}}</td>
                    <td>
                        <a href="/delete_user/{{this._id}}">
                            <button class="btn-small waves-effects waves-light red darken-3">
                                <i class="material-icons left">delete_forever</i>
                                Delete User
                            </button>
                        </a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <br>
    <br>
    <br>
</div>